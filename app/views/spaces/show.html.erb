<!-- studio info -->
<div class="border-bottom-light bg-white">
  <div class="container py-3">
    <div class="row">
      <div class="col-md-8 p-3">
        <h3><%= @space.name %></h3>
        <img src="https://res.cloudinary.com/doytwihfl/image/upload/v1582928012/Screen_Shot_2020-02-28_at_17.12.41_fjxzxh.png" alt="reviews">
        <p>
          <%= @space.content %> <a href="#">Read more</a>
        </p>

        <!-- Rentals -->
          <div class="card card p-3 mb-3">
            <h5><strong>STUDIO USE</strong></h5>
            <div class="center">
            <ul class="list-inline tags">
            <% @space.tags.each do |tag| %>
            <li id="tag" class="fas fa-tag badge badge-dark mr-0 list-inline-item">&nbsp;&nbsp;<span class="tag-text"><%=tag.name%></span></li>
          <% end %>
          </ul>
          </div>
          </div>
          <div class="card card p-3 mb-3">
            <h5><strong>STUDIO INFORMATION</strong></h5>
            <p><small>Size: 32 mÂ²</small></p>
            <p><small>Type: private</small></p>
            <p><small>Rental Period (Min): 30 Days</small></p>
          </div>
          <div class="card card p-3 mb-3">
            <h5><strong>FACILITIES</strong></h5>
            <p><small>Desk</small></p>
            <p><small>Kitchen</small></p>
            <p><small>Water</small></p>
            <p><small>Windows</small></p>
            <p><small>Electricity</small></p>
            <p><small>Wifi</small></p>
          </div>
          <div class="card card p-3 mb-3">
            <h5><strong>ACCESS</strong></h5>
            <p><small>Parking</small></p>
            <p><small>Public Transport</small></p>
            <p><small>Wheel chair access</small></p>
          </div>
          <img src="https://res.cloudinary.com/doytwihfl/image/upload/v1582928363/Screen_Shot_2020-02-28_at_17.17.06_aagnlh.png" alt="reviews">


      <dl>
        <% @space.reviews.each do |review| %>
          <dt><%= review.content %></dt>
          <dd><%= review.ratings %></dd>
        <% end %>
      </dl>

      <% if @space.booked_by?(current_user)  %>
      <% end %>
      <h2>Recommended spaces</h2>
       <div class="cards-grid p-3 flex-grow-1">
          <% @spaces.each do |space| %>
          <%= render '/spaces/card', space: space %>
          <% end %>
      </div>
      </div>





      <div class="col-md-4">
        <!-- checkout -->
        <div class="card p-3 m-3  stick">
          <div class="d-flex align-items-center mt-3">
            <p><strong><h2>$<%= @space.price_per_day %>/day</h2></strong></p>
          </div>
          <div class="d-flex align-items-center mt-1">
            <p><%= @space.address %>, <%= @space.city %></p>
          </div>
          <h5 class="mt-3 mb-3">Book this space</h5>
          <%= simple_form_for [@space, @reservation] do |f| %>
            <%= f.input :start_on %>
            <%= f.input :end_on %>
            <%= f.submit "Confirm", class: "btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
      <!-- /checkout -->

